<Window x:Class="SpitOut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:views="clr-namespace:SpitOut.Views"
        xmlns:models="clr-namespace:SpitOut.Models"
        mc:Ignorable="d po" 
        Height="{Binding WindowHeight}" Width="{Binding WindowWidth}" SizeToContent="Manual"
        Title="{Binding ConfigName, StringFormat='{}{0} - SpitOut'}"
        d:DataContext="{d:DesignInstance Type=models:ConfigModel, IsDesignTimeCreatable=True}">
    <views:MainView/>
</Window>
